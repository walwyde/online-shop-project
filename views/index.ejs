  <body>
<%- include('includes/navigation') %>

<% if (hasProducts) { %> 
                  <h1>Displaying content in Stock . . . ..</h1> 
  <div class="card-list">
    <div class="card-items">
      
      <% prods.forEach( product => { %>
                <div class="card">
                  <h2 class="item-title"><%= product.title %></h2>
                  <img src="https://images.pexels.com/photos/1005324/literature-book-open-pages-1005324.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", width= "250px" />
                  <h2 class="item-price">$ 1.99</h2>
                  <p class="card-text"> A very interesting Book with even more interesting Content. </p>
                  <button type="submit">Add to Cart</button>
                </div>
                <% }) %>
              </div>
        </div>

    <% } else { %>
      <h1>There Are No Products Yet</h1>
    <% } %>
</main>


    
