extends layouts/mainLayout.pug

block styles 
  link(rel="stylesheet", href="card.css")

block contents 
  main
    if prods.length > 0
      .card-list 
        h1 Displaying content in Stock . . . ..
        .card-items 
          each product in prods
              .card
                h2.item-title #{product.title}
                img(src="https://images.pexels.com/photos/1005324/literature-book-open-pages-1005324.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", width= "250px")
                h2.item-price $1.99
                p.card-text A very interesting Book with even more interesting Content.
                button(type="submit") Add to Cart
    else 
      h1 There are no Products Yet...


    include footer.pug
